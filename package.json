{
  "name": "vue-wp-plugin-starter",
  "version": "0.1.0",
  "description": "A WordPress Vue.js starter plugin",
  "author": "Tareq Hasan <tareq@wedevs.com>",
  "license": "GPLv3",
  "private": true,
  "scripts": {
    "dev": "npm run development",
    "development": "mix",
    "watch": "mix watch",
    "watch-poll": "mix watch -- --watch-options-poll=1000",
    "hot": "mix watch --hot",
    "prod": "npm run production",
    "production": "mix --production",
    "lint": "tslint --project ./tsconfig.json src/**/*.ts && eslint src/**/*.vue",
    "lint-fix": "tslint --project ./tsconfig.json --fix src/**/*.ts && eslint --fix src/**/*.vue",
    "test": "jest"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "ie >= 11"
  ],
  "devDependencies": {
    "@babel/eslint-parser": "^7.14.7",
    "@types/jest": "^26.0.24",
    "@types/jquery": "^3.5.6",
    "@vue/cli-plugin-unit-jest": "^4.5.13",
    "@vue/compiler-sfc": "^3.1.5",
    "@vue/test-utils": "^2.0.0-0",
    "autoprefixer": "^10.3.1",
    "axios": "^0.21.1",
    "browser-sync": "^2.27.4",
    "browser-sync-webpack-plugin": "^2.3.0",
    "core-js": "^2.6.12",
    "css-loader": "5.2.7",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-plugin-vue": "^7.13.0",
    "jest": "26.6.3",
    "jsdom": "^16.6.0",
    "laravel-mix": "^6.0.25",
    "postcss": "^8.3.5",
    "postcss-import": "^14.0.2",
    "postcss-loader": "^6.1.1",
    "purecss-sass": "^2.0.6",
    "resolve-url-loader": "^4.0.0",
    "sass": "^1.35.2",
    "sass-loader": "^12.1.0",
    "ts-jest": "26.5.6",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.1.0",
    "tsconfig-paths": "^3.10.1",
    "tslint": "^6.1.3",
    "typescript": "^4.3.5",
    "vue": "^3.1.4",
    "vue-jest": "^5.0.0-0",
    "vue-loader": "^16.3.1",
    "vue-next-masonry": "^1.0.4",
    "vue-router": "^4.0.10",
    "webpack": "^5.45.1"
  }
}
